<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="classpath:application.properties"/>

    <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
        <property name="driverClassName" value="${db.driver}"/>
        <property name="jdbcUrl" value="${db.url}"/>
        <property name="username" value="${db.user}"/>
        <property name="password" value="${db.password}"/>
        <property name="maximumPoolSize" value="${db.hikari.pool-size}"/>
    </bean>

    <bean id="hikariDataSource" class="com.zaxxer.hikari.HikariDataSource">
        <constructor-arg name="configuration" ref="hikariConfig"/>
    </bean>

    <bean id="passwordBlackListDataBase" class="ru.itis.service.impl.PasswordBlackListDataBaseImpl">
        <constructor-arg name="dataSource" ref="hikariDataSource"/>
    </bean>

    <bean id="emailValidator" class="ru.itis.service.impl.EmailValidatorDataBaseImpl">
        <constructor-arg name="dataSource" ref="hikariDataSource"/>
    </bean>

    <bean id="service" class="ru.itis.models.SignUpService">
        <constructor-arg name="emailValidator" ref="emailValidator"/>
        <constructor-arg name="passwordBlackList" ref="passwordBlackListDataBase"/>
    </bean>
</beans>